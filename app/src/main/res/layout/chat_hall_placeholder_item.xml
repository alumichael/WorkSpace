<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/size_five">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/avatar"
                android:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/firstname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_eight"
                    android:background="@color/placeholder_bg"
                    android:textColor="@color/colorPrimaryDark" />

                <View
                    android:id="@+id/lastname_txt"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/size_eight"
                    android:layout_marginTop="@dimen/size_five"
                    android:background="@color/placeholder_bg"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/size_two"
            android:layout_marginBottom="@dimen/size_four"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_twenty"
            android:layout_marginRight="@dimen/size_five"
            android:background="@color/placeholder_bg" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.2dp"
            android:layout_marginTop="@dimen/size_two"
            android:layout_marginBottom="@dimen/size_four"
            android:background="@color/placeholder_bg" />
    </LinearLayout>
</RelativeLayout>
