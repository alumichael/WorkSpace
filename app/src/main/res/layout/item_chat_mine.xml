<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingStart="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingBottom="@dimen/padding_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_huge"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical"

       >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/text_view_chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="25dp"
                android:paddingTop="2dp"
                android:paddingStart="10dp"
                android:paddingBottom="2dp"

                android:text="Hi Friend oooooooooooo\noooooo"
                android:background="@drawable/green_bubble"
                android:backgroundTint="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorWhite" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="bottom|end"
              android:paddingStart="10dp"
              android:paddingBottom="4dp"
              android:paddingEnd="25dp"

              >

              <ImageView
                  android:id="@+id/img_sent"
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:src="@drawable/ic_sent"
                  android:visibility="visible"
                  />
              <TextView
                  android:id="@+id/time_sent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="04:00 AM"
                  android:textColor="@color/colorWhite"
                  android:textSize="10sp"
                  android:textStyle="italic"
                  android:visibility="visible"


                  />

          </LinearLayout>



        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>
</RelativeLayout>
