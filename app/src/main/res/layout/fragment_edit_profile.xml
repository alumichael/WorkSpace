<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="250dp">
        <View android:background="@drawable/profile_bg_up_color_gradient" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center" android:id="@+id/pick_photo" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/man" app:civ_border_color="@color/colorPrimary" app:civ_border_width="2dp"/>
        <TextView android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Click to Upload Picture"/>
    </FrameLayout>
    <View android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="3dp"/>
    <FrameLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/colorPrimary" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ProgressBar android:id="@+id/progressBar_profile" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:padding="@dimen/size_eight" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/size_eight">
                <android.support.design.widget.TextInputLayout android:id="@+id/inputLayoutFirstnameP" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/firstname_editxt" android:background="@drawable/rounded_bg" android:padding="@dimen/size_ten" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_ten" android:layout_marginRight="@dimen/size_ten" android:hint="First Name" android:inputType="textPersonName" android:drawableEnd="@drawable/ic_person_black_24dp"/>
                </android.support.design.widget.TextInputLayout>
                <View android:background="@color/colorAccent" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginTop="8dp"/>
                <android.support.design.widget.TextInputLayout android:id="@+id/inputLayoutLastnameP" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/lastname_editxt" android:background="@drawable/rounded_bg" android:padding="@dimen/size_ten" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_ten" android:layout_marginRight="@dimen/size_ten" android:hint="Last Name" android:inputType="textPersonName" android:drawableEnd="@drawable/ic_person_black_24dp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout android:id="@+id/inputLayoutDesignationP" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/designation_editxt" android:background="@drawable/rounded_bg" android:padding="@dimen/size_ten" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_ten" android:layout_marginRight="@dimen/size_ten" android:hint="Designation" android:inputType="textPersonName" android:drawableEnd="@drawable/ic_stars_black_24dp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout android:id="@+id/inputLayoutPhone_NumP" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:id="@+id/phone_num_editxt" android:background="@drawable/rounded_bg" android:padding="@dimen/size_ten" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_ten" android:layout_marginRight="@dimen/size_ten" android:hint="Phone Number" android:inputType="textPersonName" android:drawableEnd="@drawable/ic_contact_phone_black_24dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button android:textColor="@android:color/white" android:id="@+id/update_btn" android:background="@drawable/rounded_bg_color_btn" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size_fifteen" android:layout_marginTop="@dimen/size_twelve" android:layout_marginRight="@dimen/size_fifteen" android:text="Update Profile"/>
                <com.wang.avi.AVLoadingIndicatorView android:layout_gravity="center" android:id="@+id/avi1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:indicatorColor="@color/colorAccent" app:indicatorName="BallPulseIndicator"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
